[
  {
    "name": "threeImage",
    "type": "group",
    "widget": "threeImage",
    "label": "Three Image Editor",
    "importance": "high",
    "fields": [
      {
        "name": "scenes",
        "type": "list",
        "label": "Scenes",
        "entity": "Scene",
        "min": 0,
        "field": {
          "name": "scene",
          "type": "group",
          "fields": [
            {
              "name": "sceneType",
              "type": "select",
              "label": "Scene type",
              "widget": "radioGroup",
              "alignment": "horizontal",
              "options": [
                {
                  "value": "360",
                  "label": "360 image"
                },
                {
                  "value": "panorama",
                  "label": "Panoramic image"
                },
                {
                  "value": "static",
                  "label": "Static image"
                }
              ],
              "default": "360"
            },
            {
              "name": "showBackButton",
              "type": "boolean",
              "label": "Display \"Back\" button",
              "description": "Display button for navigating back to your previous scene",
              "default": true,
              "widget": "showWhen",
              "showWhen": {
                "rules": [
                  {
                    "field": "sceneType",
                    "equals": "static"
                  }
                ]
              }
            },
            {
              "name": "sceneId",
              "type": "number"
            },
            {
              "name": "scenename",
              "type": "text",
              "label": "Scene Title",
              "description": "Used to identify the scene"
            },
            {
              "name": "scenesrc",
              "type": "image",
              "label": "Scene Background"
            },
            {
              "name": "scenedescription",
              "type": "text",
              "widget": "html",
              "label": "Scene Description",
              "description": "A text that can describe the scene for the end-user",
              "optional": true,
              "tags": [
                "p",
                "br",
                "strong",
                "em",
                "code"
              ]
            },
            {
              "name": "showSceneDescriptionInitially",
              "type": "boolean",
              "label": "Display \"Scene Description\" initially",
              "description": "Display the scene description when the scene starts for the first time",
              "default": false
            },
            {
              "name": "cameraStartPosition",
              "type": "text",
              "label": "Initial camera position",
              "description": "Camera position in pitch and yaw"
            },
            {
              "name": "interactions",
              "label": "Interactions",
              "type": "list",
              "min": 0,
              "field": {
                "name": "interaction",
                "type": "group",
                "fields": [
                  {
                    "name": "labelText",
                    "type": "text",
                    "label": "Label",
                    "optional": true,
                    "description": "If left blank no label will be displayed and we'll try to use the title field for screen readers"
                  },
                  {
                    "name": "label",
                    "type": "group",
                    "label": "Label Settings",
                    "importance": "low",
                    "fields": [
                      {
                        "name": "labelPosition",
                        "type": "select",
                        "label": "Label position",
                        "description": "Choose where the label should appear",
                        "options": [
                          {
                            "value": "inherit",
                            "label": "Use behavioral setting"
                          },
                          {
                            "value": "right",
                            "label": "Right aligned"
                          },
                          {
                            "value": "left",
                            "label": "Left aligned"
                          },
                          {
                            "value": "top",
                            "label": "Top aligned"
                          },
                          {
                            "value": "bottom",
                            "label": "Bottom aligned"
                          }
                        ],
                        "default": "inherit"
                      },
                      {
                        "name": "showLabel",
                        "type": "select",
                        "label": "Display Label",
                        "description": "If hidden - labels will show only on mouse over",
                        "options": [
                          {
                            "value": "inherit",
                            "label": "Use behavioral setting"
                          },
                          {
                            "value": "show",
                            "label": "Show"
                          },
                          {
                            "value": "hide",
                            "label": "Hide"
                          }
                        ],
                        "default": "inherit"
                      },
                      {
                        "name": "showAsHotspot",
                        "type": "boolean",
                        "label": "Show as hotspot",
                        "description": "Allows for adding interaction areas to the background image that can be custom size.",
                        "optional": true
                      },
                      {
                        "name": "showHotspotOnHover",
                        "type": "boolean",
                        "label": "Show hotspot when mouse is hovering",
                        "description": "Will allow hotspot to be visible when mouse is hovering the area.",
                        "optional": true,
                        "widget": "showWhen",
                        "showWhen": {
                          "rules": [
                            {
                              "field": "showAsHotspot",
                              "equals": true
                            }
                          ]
                        }
                      },
                      {
                        "name": "isHotspotTabbable",
                        "type": "boolean",
                        "label": "Set the hotspot be tabbable",
                        "description": "Will allow hotspot to be tabbable. Can be used for accessibilty.",
                        "optional": true,
                        "widget": "showWhen",
                        "showWhen": {
                          "rules": [
                            {
                              "field": "showAsHotspot",
                              "equals": true
                            }
                          ]
                        }
                      },
                      {
                        "name": "showAsOpenSceneContent",
                        "type": "boolean",
                        "label": "Show as open content in the scene",
                        "description": "Allows the content to be shown in an open dialog box directly in the scene.",
                        "optional": true,
                        "widget": "showWhen",
                        "showWhen": {
                          "rules": [
                            {
                              "field": "showAsHotspot",
                              "equals": false
                            }
                          ]
                        }
                      },
                      {
                        "name": "hotSpotSizeValues",
                        "type": "text",
                        "default": "256,128",
                        "label": "Values for storing the height and width for hotspot",
                        "optional": true,
                        "widget": "none"
                      },
                      {
                        "name": "interactionPassword",
                        "type": "text",
                        "label": "Code for the interaction",
                        "description": "If not empty, the user has to input the code in order to open this content.",
                        "optional": true
                      },
                      {
                        "name": "interactionPasswordHint",
                        "type": "text",
                        "label": "A hint for the interaction code",
                        "description": "An optional hint for the code, can be left empty if wanted",
                        "optional": true,
                        "widget": "html",
                        "tags": [
                          "br",
                          "strong",
                          "em"
                        ]
                      }
                    ]
                  },
                  {
                    "name": "action",
                    "type": "library",
                    "options": [
                      "H5P.GoToScene 0.1",
                      "H5P.AdvancedText 1.1",
                      "H5P.Image 1.1",
                      "H5P.Audio 1.4",
                      "H5P.Video 1.5",
                      "H5P.Summary 1.10",
                      "H5P.SingleChoiceSet 1.11",
                      "H5P.MultiChoice 1.14",
                      "H5P.Blanks 1.12"
                    ]
                  },
                  {
                    "name": "interactionpos",
                    "type": "text"
                  },
                  {
                    "name": "iconTypeTextBox",
                    "type": "select",
                    "label": "Button style",
                    "description": "Decide how the icon should look.",
                    "widget": "showWhen",
                    "showWhen": {
                      "rules": [
                        {
                          "field": "action",
                          "equals": [
                            "H5P.AdvancedText"
                          ]
                        }
                      ],
                      "widget": "imageRadioGroup"
                    },
                    "alignment": "horizontal",
                    "fontFamily": "360-Image",
                    "options": [
                      {
                        "value": "text-icon",
                        "label": "Text icon",
                        "fontIcon": "e91f"
                      },
                      {
                        "value": "info-icon",
                        "label": "Info icon",
                        "fontIcon": "e91a"
                      }
                    ],
                    "default": "text-icon"
                  }
                ]
              }
            },
            {
              "name": "iconType",
              "type": "select",
              "label": "Button style",
              "description": "Decide how buttons pointing to this scene should look. For scenes that are static and does not lead to new scenes, we recommend the \"More information\" button.",
              "widget": "radioGroup",
              "alignment": "horizontal",
              "options": [
                {
                  "value": "arrow",
                  "label": "New scene (arrow)"
                },
                {
                  "value": "plus",
                  "label": "More information (plus)"
                }
              ],
              "default": "arrow"
            },
            {
              "name": "audioType",
              "type": "select",
              "label": "Audio type",
              "description": "Decide what audio type this scene will use, either use an audio track or choose an existing audio playlist.",
              "widget": "radioGroup",
              "alignment": "horizontal",
              "options": [
                {
                  "label": "Audio Track",
                  "value": "audio"
                },
                {
                  "label": "Playlist",
                  "value": "playlist"
                }
              ],
              "default": "audio"
            },
            {
              "name": "audio",
              "type": "audio",
              "label": "Audio Track",
              "description": "Add an audio track that's specific for this scene.",
              "optional": true,
              "widgetExtensions": [
                "AudioRecorder"
              ],
              "widget": "showWhen",
              "showWhen": {
                "rules": [
                  {
                    "field": "audioType",
                    "equals": "audio"
                  }
                ]
              }
            },
            {
              "label": "Playlist",
              "description": "Here you can pick an existing playlist as audio.",
              "name": "playlist",
              "type": "text",
              "widget": "showWhen",
              "showWhen": {
                "rules": [
                  {
                    "field": "audioType",
                    "equals": "playlist"
                  }
                ],
                "widget": "playlist"
              }
            },
            {
              "label": "Restart audio when scene is reopened",
              "name": "restartAudioOnSceneStart",
              "type": "boolean",
              "default": false
            }
          ]
        }
      },
      {
        "name": "startSceneId",
        "type": "number",
        "default": 0
      },
      {
        "name": "audio",
        "type": "audio",
        "label": "Audio track",
        "optional": true
      },
      {
        "name": "playlists",
        "type": "list",
        "label": "Playlists",
        "optional": true,
        "field": {
          "name": "playlist",
          "type": "group",
          "fields": [
            {
              "label": "Playlist Title",
              "name": "title",
              "type": "text",
              "description": "Used to identify the playlist",
              "optional": false
            },
            {
              "label": "Audio Tracks",
              "name": "audioTracks",
              "type": "audio",
              "description": "Add audio tracks to the playlist.",
              "optional": false,
              "widgetExtensions": [
                "AudioRecorder"
              ]
            },
            {
              "name": "playlistId",
              "type": "text",
              "widget": "none"
            }
          ]
        }
      }
    ]
  },
  {
    "name": "audioPlaylistsGroup",
    "type": "group",
    "label": "Playlists",
    "importance": "low",
    "description": "These options will let you add playlists for the scenes.",
    "fields": [
      {
        "name": "audioPlaylists",
        "type": "number",
        "label": "Added playlists",
        "description": "Make playlists that's available for all scenes by default.",
        "widget": "playlist",
        "canEdit": true
      }
    ]
  },
  {
    "name": "behaviour",
    "type": "group",
    "label": "Behavioral settings",
    "importance": "low",
    "description": "These options will let you control how the world behaves.",
    "fields": [
      {
        "name": "audioType",
        "type": "select",
        "label": "Audio type",
        "description": "Decide what audio type this scene will use, either use an audio track or choose an existing audio playlist.",
        "widget": "radioGroup",
        "alignment": "horizontal",
        "options": [
          {
            "label": "Global Audio",
            "value": "audio"
          },
          {
            "label": "Playlist",
            "value": "playlist"
          }
        ],
        "default": "audio"
      },
      {
        "name": "audio",
        "type": "audio",
        "label": "Global Audio",
        "description": "Add an audio track that's available for all of the scenes by default.",
        "optional": true,
        "widgetExtensions": [
          "AudioRecorder"
        ],
        "widget": "showWhen",
        "showWhen": {
          "rules": [
            {
              "field": "audioType",
              "equals": "audio"
            }
          ]
        }
      },
      {
        "label": "Playlist",
        "description": "Here you can pick an existing playlist as audio.",
        "name": "playlist",
        "type": "text",
        "widget": "showWhen",
        "showWhen": {
          "rules": [
            {
              "field": "audioType",
              "equals": "playlist"
            }
          ],
          "widget": "playlist"
        }
      },
      {
        "name": "showScoresButton",
        "type": "boolean",
        "label": "Display \"Scores\" button",
        "description": "Display button for showing the scores from assignments.",
        "default": false
      },
      {
        "name": "sceneRenderingQuality",
        "type": "select",
        "label": "Scene rendering quality",
        "description": "Choose the amount of width and height segments used to render a scene. This directly affects the quality level of the scene, try increasing the quality if a scene looks \"blocky\" or \"waves\" are seen within the scenes. Note that higher quality rendering takes more time to load.",
        "options": [
          {
            "value": "high",
            "label": "High Quality (128x128)"
          },
          {
            "value": "medium",
            "label": "Medium Quality (64x64)"
          },
          {
            "value": "low",
            "label": "Low Quality (16x16)"
          }
        ],
        "default": "high"
      },
      {
        "name": "label",
        "type": "group",
        "label": "Label settings",
        "importance": "low",
        "expanded": true,
        "fields": [
          {
            "name": "labelPosition",
            "type": "select",
            "label": "Label position",
            "description": "The default label position. The position may be overriden per interaction",
            "options": [
              {
                "value": "right",
                "label": "Right aligned"
              },
              {
                "value": "left",
                "label": "Left aligned"
              },
              {
                "value": "top",
                "label": "Top aligned"
              },
              {
                "value": "bottom",
                "label": "Bottom aligned"
              }
            ],
            "default": "right"
          },
          {
            "name": "showLabel",
            "type": "boolean",
            "label": "Display Labels",
            "description": "If unchecked - labels will show only on mouse over",
            "default": true
          }
        ]
      }
    ]
  },
